{
  "compilerOptions": {
    "outDir":         ".ts_output",
    "sourceMap":      true,
    "noImplicitAny":  false,
    "module":         "commonjs",
    "target":         "es6",
    "jsx":            "react",
    "allowJs":        true,
    "pretty":         true,
    "baseUrl": "./",
    "paths": {
      "module/*": ["source/js/module/*"]
    }
  },
  "include": [
    "./source/**/*"
  ]
}